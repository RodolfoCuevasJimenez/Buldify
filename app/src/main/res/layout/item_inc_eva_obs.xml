<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clVisualizacionGeneral"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/buttonColor">

    <LinearLayout
        android:id="@+id/llVisualizacion"
        android:layout_width="379dp"
        android:layout_height="269dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/forma"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.057">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clVisualizacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/forma"
            tools:ignore="TextSizeCheck,VisualLintBounds">

            <TextView
                android:id="@+id/tvEncargado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/tvEncargado1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.222"
                app:layout_constraintStart_toEndOf="@+id/tvEncargado1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="HardcodedText,TextSizeCheck" />

            <TextView
                android:id="@+id/tvTelefono1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descripcionV"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tvDireccion1"
                app:layout_constraintTop_toBottomOf="@+id/tvDireccion1"
                app:layout_constraintVertical_bias="0.074"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/tvEncargado1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/etapa"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvTelefono1"
                app:layout_constraintHorizontal_bias="0.051"
                app:layout_constraintStart_toStartOf="@+id/tvTelefono1"
                app:layout_constraintTop_toBottomOf="@+id/tvTelefono1"
                app:layout_constraintVertical_bias="0.224"
                tools:ignore="MissingConstraints,TextSizeCheck" />

            <TextView
                android:id="@+id/tvDireccion1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="72dp"
                android:text="@string/fecha"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.044"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/tvDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="48dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/tvDireccion1"
                app:layout_constraintStart_toEndOf="@+id/tvDireccion1"
                app:layout_constraintTop_toTopOf="@+id/tvDireccion1"
                app:layout_constraintVertical_bias="0.0"
                tools:ignore="HardcodedText,TextSizeCheck" />

            <TextView
                android:id="@+id/tvCorreo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="84dp"
                android:text="@string/observaciones"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvEncargado1"
                app:layout_constraintHorizontal_bias="0.033"
                app:layout_constraintStart_toStartOf="@+id/tvEncargado1"
                tools:ignore="TextSizeCheck" />

            <EditText
                android:id="@+id/mltObservaciones"
                android:layout_width="223dp"
                android:layout_height="60dp"
                android:layout_marginStart="4dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Ingrese sus observaciones aquÃ­ "
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:textColorHint="#817373"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvCorreo1"
                app:layout_constraintStart_toEndOf="@+id/tvCorreo1"
                app:layout_constraintTop_toTopOf="@+id/tvCorreo1"
                app:layout_constraintVertical_bias="0.536"
                tools:ignore="Autofill,HardcodedText" />

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="240dp"
                android:layout_height="36dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/botones"
                android:backgroundTint="@color/buttonColor"
                android:text="@string/btnGuardar"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/mltObservaciones"
                app:layout_constraintStart_toStartOf="@+id/tvCorreo1"
                app:layout_constraintTop_toBottomOf="@+id/mltObservaciones"
                app:layout_constraintVertical_bias="1.0"
                tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />

            <TextView
                android:id="@+id/tvDescripcionV"
                android:layout_width="253dp"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/tvTelefono1"
                app:layout_constraintStart_toEndOf="@+id/tvTelefono1"
                app:layout_constraintTop_toTopOf="@+id/tvTelefono1"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/ivIncidente"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="icono"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.933"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.057"
                app:srcCompat="@drawable/incidente"
                tools:ignore="HardcodedText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>