<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cuadrado_gris"
    >

    <CalendarView
        android:id="@+id/calendarView_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="60dp"
        android:background="@color/gray_1"
        android:theme="@style/CalenderViewCustom"
        android:weekDayTextAppearance="@style/CalendarDayHeader"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_add_date_calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendarView_popup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Seleccionar fecha" />

</RelativeLayout>