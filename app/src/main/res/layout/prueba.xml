<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="811dp"
            android:layout_height="wrap_content"
            android:background="@color/iconoapp_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="70dp"
                    android:layout_height="62dp"
                    app:srcCompat="@drawable/logo" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Tablas de Costos"
                    android:textColor="@color/black"

                    android:textSize="34sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>

        <TableLayout
            android:id="@+id/tablaid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@color/white">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="16dp"

                    android:text="ID"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_nombre"
                    android:layout_width="106dp"
                    android:padding="16dp"
                    android:text="Nombre"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_precio"
                    android:padding="16dp"
                    android:text="Precio"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/columnatv_detalle"
                    android:padding="16dp"
                    android:text="Detalle"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_id1"
                    android:padding="16dp"
                    android:text="Fila "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_nombre1"
                    android:padding="16dp"
                    android:text="Fila 1, "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_precio1"
                    android:padding="16dp"
                    android:text="Fila 1, 3"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalle" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:padding="16dp"
                    android:text="Fila 2, "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:padding="16dp"
                    android:text="Fila 2,  2"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:padding="16dp"
                    android:text="Fila 2,  3"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalle" />

            </TableRow>

        </TableLayout>
    </LinearLayout>
    <Button
        android:text="Cargar Datos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/bnt_cargar" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>