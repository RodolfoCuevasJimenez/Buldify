<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "#e3e3e3"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background_view" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:textSize="34sp"
        app:fontFamily="@font/montserrat_extrabold"
        android:text="MenÃº Principal" />

    <ImageView
        android:id="@+id/btnCerrarSesion"
        android:layout_width="24dp"
        android:layout_height="28dp"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/salir" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_top"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="-80dp"
        android:rowCount="3"
        android:columnCount="2"
        >

        //Documentos
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#e3e3e3"
            android:layout_columnWeight = "1"
            android:layout_rowWeight = "1"
            android:layout_row = "0"
            android:layout_column = "0"
            android:layout_marginBottom = "15dp"
            android:layout_marginRight = "15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/documentos" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Documentos"
                    app:fontFamily="@font/montserrat_extrabold"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        //Cronograma
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#e3e3e3"
            android:layout_columnWeight = "1"
            android:layout_rowWeight = "1"
            android:layout_row = "0"
            android:layout_column = "1"
            android:layout_marginBottom = "15dp"
            android:layout_marginRight = "15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/cronograma" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Cronograma"
                    app:fontFamily="@font/montserrat_extrabold"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        //Tramites de la obra
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#e3e3e3"
            android:layout_columnWeight = "1"
            android:layout_rowWeight = "1"
            android:layout_row = "1"
            android:layout_column = "0"
            android:layout_marginBottom = "15dp"
            android:layout_marginRight = "15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/tramites" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Tramites de la obra"
                    app:fontFamily="@font/montserrat_extrabold"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        //Tabla de costos
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#e3e3e3"
            android:layout_columnWeight = "1"
            android:layout_rowWeight = "1"
            android:layout_row = "1"
            android:layout_column = "1"
            android:layout_marginBottom = "15dp"
            android:layout_marginRight = "15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/costos" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Tabla de costos"
                    app:fontFamily="@font/montserrat_extrabold"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        //Incidentes
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#e3e3e3"
            android:layout_columnWeight = "1"
            android:layout_rowWeight = "1"
            android:layout_row = "2"
            android:layout_column = "0"
            android:layout_marginBottom = "15dp"
            android:layout_marginRight = "15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/incidentes" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Incidentes"
                    app:fontFamily="@font/montserrat_extrabold"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        //Servicios Independientes
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="#e3e3e3"
            android:layout_columnWeight = "1"
            android:layout_rowWeight = "1"
            android:layout_row = "2"
            android:layout_column = "1"
            android:layout_marginBottom = "15dp"
            android:layout_marginRight = "15dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/servicios" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Servicios"
                    app:fontFamily="@font/montserrat_extrabold"
                    android:layout_gravity="center_horizontal"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </GridLayout>




</RelativeLayout>